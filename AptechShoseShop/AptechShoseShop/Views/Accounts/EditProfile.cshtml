@model AptechShoseShop.Models.Entites.TbUser

<h1>Thông tin của bạn</h1>

<div class="container">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            @*<h4 style="margin: 0; line-height: 1.42857143" class="modal-title">Register</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>*@
        </div>

        @{
            <div class="modal-body">
                <div style="padding:10px">
                    <form method="post" action="@Url.Action("EditProfile", "Accounts")">
                        <div hidden class="form-group">
                            <label>ID</label>
                            <input name="Id" class="form-control" value="@Model.Id"/>
                        </div>
                        <div class="form-group">
                            <label>Tên</label>
                            <input name="FullName" class="form-control" value="@Model.FullName"/>
                        </div>
                        <div class="form-group">
                            <label>Giới tính</label>

                            @{

                                string userGender = Model.Gender != null ? (Model.Gender == true ? "Nam" : "Nữ") : "Chọn";
                                int numGender = -1;
                                if (Model.Gender == true)
                                {
                                    numGender = 1;
                                }
                                else if (Model.Gender == false)
                                {
                                    numGender = 0;
                                }
                            }
                            <select id="Gender" name="Gender" class="form-control nice-select sort-select">
                                <option value="@numGender">@userGender</option>
                                <option value="1">Nam</option>
                                <option value="0">Nữ</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input readonly name="Email" class="form-control" value="@Model.Email"/>
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input name="NumberPhone" class="form-control" value="@Model.NumberPhone"/>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input name="Address" class="form-control" value="@Model.Address"/>
                        </div>

                        <div class="form-group">
                            <button id="submitButton" class="btn btn-success">Submit</button>
                        </div>
                        <div class="form-group">
                            <a style="color: white; font-weight: bold" class="btn btn-info" data-toggle="modal" data-target="#_changePW">
                                Thay đổi mật khẩu
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>

</div>


