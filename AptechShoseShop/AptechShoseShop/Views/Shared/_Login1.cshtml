<div class="">

    <!-- Trigger the modal with a button -->
    @*<button type="button" class="btn btn-info btn-lg"
        data-toggle="modal" data-target="#_login">Open Modal</button>*@

    <!-- Modal -->
    <div class="modal fade" id="_Login1" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 style="margin: 0; line-height: 1.42857143" class="modal-title">Login</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div style="padding:10px">
                        <form method="post" action="@Url.Action("LoginCkout", "Accounts")">
                            <div class="form-group">
                                <label>Email</label>
                                <input id="Email1" name="Email1" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input id="Password1" name="Password1" type="password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <button id="btnTest" type="button" class="btn btn-success">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        $('#btnTest').click(function () {

            var email = $('#Email1').val(),
                password = $('#Password1').val();

            //if (email == "" || password == "") {
            //    alert("Please fill full");
            //};

            var data = {
                "Email1": email,
                "Password1": password
            };

                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("LoginCkout", "Accounts")',
                        data: data,
                        dataType: "json",
                        success: function (result) {
                            console.log(result);
                            if (result === "NULL") {
                                alert("Account is not exist");
                            }
                            else if (result === "NOTNULL")
                            {
                                alert("Please fill full");
                            }
                            else if (result === "NOTCORRECT")
                            {
                                alert("Password is not correct");
                            }
                            else if (result === "OK") {
                                location.reload();
                            };
                        },
                        error: function (result) { console.log(result); }
                    });
                })
            });
</script>




