@using PagedList.Mvc
@model PagedList.IPagedList<AptechShoseShop.Models.Entites.Product>
<link href="~/Content/PagedList.css" rel="stylesheet" />
<h2>Quản lý sản phẩm</h2>

<button class="btn btn-info" onclick="location.href='@Url.Action("Create")'">Tạo mới sản phẩm</button>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Thông tin sản phẩm</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                string src = "";

                if (item.ProductImageId != null)
                {
                    src = "/data/products/" + item.Id + "/" + item.ProductImage.ImageUrl;
                }
                else
                {
                    src = "https://www.viettablet.com/images/companies/1/anh3/galaxy-s7-edge-01.jpg";
                }
                <tr id="HidePro-@item.Id">

                    <td>
                        <img src="@src" style="width:200px" />
                    </td>
                    <td>
                        <div>#ID: @item.Id</div>
                        <div>@item.ProductName</div>
                        <div>$@item.UnitPrice.ToString("N2")</div>
                        @if (@item.DiscountRatio > 0)
                        {
                            <div>Giảm giá @item.DiscountRatio %</div>
                            <div>Đến: @item.DiscountExpiry.ToString("yyyy-MM-dd")</div>
                        }
                        <div>@item.Category.CategoryName</div>
                        <div>@item.StatusProduct.StatusName</div>
                        <div>Người tạo: @item.TbUser.Email</div>
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id})"><i class="fas fa-edit"></i></a>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) |
                        <a href="@Url.Action("Detail", new { id = item.Id})"><i class="fas fa-info"></i></a>
                        @Html.ActionLink("Chi tiết", "Detail", new { id = item.Id }) |
                        <a class="btn btn-warning" onclick="DeletePro('@item.Id')">Xóa</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<div class="row pt--30">
    <div class="col-md-12">
        @Html.PagedListPager(Model, page => Url.Action("Index", new
        {
           page
        }))
    </div>
</div>

<script type="text/javascript">

    function DeletePro(id) {
            swal({
                title: "Are you sure?",
                text: "Nếu xóa, bạn sẽ ko thể khôi phục lại!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            url: "@Url.Action("DeletePro")",
                            type: "post",
                            data: {
                                id: id
                            },
                            success: function (result) {
                                console.log(result);
                                if (result === "OK") {
                                    swal("Ảnh của bạn đã được xóa!", {
                                        icon: "success",
                                    });
                                    // ẩn doituong-id
                                    $("#HidePro-" + id).hide();
                                }


                                else {alert(result)}
                            }
                        });


                    } else {
                        swal("Bạn chưa xóa");
                    }
                });
    };
</script>
