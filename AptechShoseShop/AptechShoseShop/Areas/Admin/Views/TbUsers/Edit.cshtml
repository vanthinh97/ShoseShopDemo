@model AptechShoseShop.Models.Entites.TbUser
@using AptechShoseShop.Models.Entites
@{ 
    List<StatusUser> ListStatus = ViewBag.Status;
}


<h1>User's Information</h1>

<div class="container">
    <!-- Modal content-->
    <div class="modal-content">

        @{
            <div class="modal-body">
                <div style="padding:10px">
                    <form method="post" action="@Url.Action("Edit")">
                        <div hidden class="form-group">
                            <label>ID</label>
                            <input name="Id" class="form-control" value="@Model.Id" />
                        </div>
                        <div class="form-group">
                            <label>Name</label>
                            <input name="FullName" class="form-control" value="@Model.FullName" />
                        </div>
                        <div class="form-group">
                            <label>Gender</label>

                            @{

                                string userGender = Model.Gender != null ? (Model.Gender == true ? "Male" : "Female") : "Choose";
                                int numGender = -1;
                                if (Model.Gender == true)
                                {
                                    numGender = 1;
                                }
                                else if (Model.Gender == false)
                                {
                                    numGender = 0;
                                }
                            }
                            <select id="Gender" name="Gender" class="form-control nice-select sort-select">
                                <option value="@numGender">@userGender</option>
                                <option value="1">Male</option>
                                <option value="0">Female</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input readonly name="Email" class="form-control" value="@Model.Email" />
                        </div>
                        <div class="form-group">
                            <label>Number Phone</label>
                            <input name="NumberPhone" class="form-control" value="@Model.NumberPhone" />
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input name="Address" class="form-control" value="@Model.Address" />
                        </div>
                        <div class="form-group">
                            <label>Status</label>
                            <select id="StatusId" name="StatusId" class="form-control nice-select sort-select">
                                <option value="@Model.StatusId">@Model.Status.StatusName</option>
                                @foreach (var item in ListStatus)
                                {
                                    <option value="@item.Id">@item.StatusName</option>     
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <button id="submitButton" class="btn btn-success">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>

</div>


